{
  "name": "agent-cucumber-cypress",
  "version": "1.0.0",
  "description": "An example for Cypress and Cucumber usage",
  "main": "index.js",
  "scripts": {
    "test-1": "./node_modules/",
    "cypress:open:dev": "CYPRESS_ENV=development npm run cypress:open",
    "cypress:open": "cypress open",
    "test:dev": "CYPRESS_ENV=development npm run test",
    "test": "cypress run --env TAGS='@Login' --spec 'cypress/integration/**/*.feature'",
    "test:debug:dev": "CYPRESS_ENV=development npm run test:debug",
    "test:debug": "cypress run --headed --browser chrome --env TAGS='@e2e-test' --spec 'cypress/integration/**/*.feature'",
    "test:pull-features": "git submodule update --remote gherkin-features && cp -rf gherkin-features/* cypress/integration && node ./scripts/remove-old-features.js"
  },
  "author": "QE RALALI",
  "license": "Private",
  "dependencies": {
    "cypress-cucumber-preprocessor": "^1.9.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3"
  },
  "devDependencies": {
    "cypress": "^3.8.1",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "prettier": "^1.19.1"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "arrowParens": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
